      <div class="col-12 text-center">
        <input type="text" placeholder="City" v-model="cityName">
        <input type="text" placeholder="Country Code" v-model="countryCode">
      </div>
      <div class="col-12 text-center">
        <button v-on:click="getWeatherByLocation">âž¤</button>
